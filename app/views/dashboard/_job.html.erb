<div id="job" class="small job <%= job.name -%> job_<%= job.status -%>">
  <h2>
    <i class="pull-left icon-<%= job.status -%>"></i>
    <%= link_to(job.name, job_path(job), :class => "show job") %>
  </h2>
  <dl class="meta">
    <dt class="description">Due in:</span>
      <dd><%= time_ago_in_words(job.next) %></dd>
    <% if job.has_checked_in? %>
      <dt class="description">Last check-in:</dt>
        <dd><%= time_ago_in_words(job.last_seen) %> ago</dd>
    <% else %>
      <dt class="description">Check-in pending</dt>
    <% end %>
  </dl>


  <!-- Split button -->
  <div class="clearfix" style="float: right">
    <div class="btn-group">
      <%= link_to('Info', job_path(job), :class => %q[btn btn-mini]) %>
      <button type="button" class="btn btn-mini dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>

      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to(
            job.active? ? "Pause" : "Unpause",
            toggle_path(job),
            :method => :post,
          ) %>
        </li>
        <li class="divider"></li>
        <li>
          <%= link_to(
            "Delete",
            job_path(job),
            :method => :delete,
            :class => %q[danger],
            :confirm => 'Are you sure?'
          ) %>
        </li>
      </ul>
    </div>
  </div>
</div>

