<div id="form">
  <%= form_tag({:action => 'create'}, {:class => 'form-inline'}) do %>
    <div class="field">
      <%= text_field_tag :email, nil,
            :placeholder => 'e-mail address',
            :class => 'login text'
      %>
      <%= submit_tag 'Sign-in', :class => 'submit button login' %>
    </div>


  <% end %>

  <p>Not a Tattletale user? <%= link_to "Create a new account", :signup %></p>

</div>
