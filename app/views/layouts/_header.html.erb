<div id="header">
  <span class="logo"><%= link_to("tattletale", :root) %></span>
  <% unless @user.nil? || @user.name.nil? || @user.new_record? %>

  <!-- Split button -->
    <span class="btn-group navigation">
      <%= link_to("New job", new_job_path, :class => %q[btn btn-small]) %>
      <button type="button" class="btn btn-small dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>

      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to("User account", :account) %>
        </li>
        <li class="divider"></li>
        <li>
          <%=
            link_to(
              "Log out",
              :logout,
              :class => "logout",
              :method => :destroy
            )
          %>
        </li>
      </ul>
    </span>

  <% end %>
</div>
